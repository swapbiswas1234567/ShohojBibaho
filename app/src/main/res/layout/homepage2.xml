<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:weightSum="13">




    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="20">

            <LinearLayout
                android:id="@+id/lpp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:background="@drawable/stroke"
                android:orientation="vertical"
                android:clickable="true">

                <ImageView
                    android:id="@+id/ipp2"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="17"
                    android:src="@drawable/usericon"
                    android:scaleType="fitXY"
                    android:clickable="true"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tchangepp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Change Profile Photo"
                android:fontFamily="serif"
                android:textColor="#1d5678"
                android:textAlignment="center"
                android:clickable="true"
                android:textSize="10sp"
                android:textStyle="bold"
                />

        </LinearLayout>





        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/tname2"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:paddingTop="5dp"
                android:textSize="18dp"
                android:textColor="#27427b"
                android:alpha=".9"
                android:clickable="true"/>

            <TextView
                android:id="@+id/tworksat2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:paddingTop="4dp"
                android:textSize="15dp"
                android:textColor="#61121b"
                android:alpha=".9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/ieditprofile2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/edit_profile_logo"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="6dp"
                    android:paddingTop="3dp"
                    android:clickable="true"
                    />

                <TextView
                    android:id="@+id/teditprofile2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:fontFamily="serif"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:text="Edit Profile"
                    android:textSize="15sp"
                    android:textColor="#111929"
                    android:alpha=".9"
                    android:clickable="true"/>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/ilogout2"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="6dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/logout"
                    android:alpha=".8"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/tlogout2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:fontFamily="serif"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:text="Log Out"
                    android:textSize="15sp"
                    android:textColor="#111929"
                    android:alpha=".9"
                    android:clickable="true"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>





    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:background="#3c4b79"
        android:text="Find Your Choice"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center"></TextView>





    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="4"
        >

        <Button
            android:id="@+id/partner"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/couple"
            />

        <Button
            android:id="@+id/car2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/car"
            />

        <Button
            android:id="@+id/convention2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/convention"
            />

        <Button
            android:id="@+id/catering2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/catering"
            />

    </LinearLayout>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        >

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:text="Partner"
            android:gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="Car"
            android:gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="Convention"
            android:gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="Catering"
            android:gravity="center"
            android:textStyle="bold"
            />

    </LinearLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/diff"
        android:scaleType="fitXY"
        android:paddingBottom="25dp"
        android:paddingTop="5dp"></ImageView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:text="Would you like to be a provider?"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="8">

        <ImageView
            android:id="@+id/iprovidecar2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/car3"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tprovidecar2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:fontFamily="serif"
            android:padding="10dp"
            android:text="Provide Car"
            android:textSize="14sp"
            android:textStyle="bold"
            android:clickable="true"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/iprovideconvention2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/convention4"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tprovideconvention2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:fontFamily="serif"
            android:padding="10dp"
            android:text="Provide Convention"
            android:textSize="14sp"
            android:textStyle="bold"
            android:clickable="true"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/iprovidecatering2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/catering3"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tprovidecatering2"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:fontFamily="serif"
            android:text="Provide Catering"
            android:textSize="14sp"
            android:textStyle="bold"
            android:clickable="true"/>

    </LinearLayout>


</LinearLayout>